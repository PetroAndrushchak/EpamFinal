  <servlet>
    <servlet-name>home</servlet-name>
    <servlet-class>com.epam.project.controller.Home</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
