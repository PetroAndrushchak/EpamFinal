  <servlet-mapping>
    <servlet-name>lenguage</servlet-name>
    <url-pattern>/lenguage</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>exit</servlet-name>
    <servlet-class>com.epam.project.controller.Exit</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>exit</servlet-name>
    <url-pattern>/exit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>confirm</servlet-name>
    <servlet-class>com.epam.project.controller.ConfirmEmail</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>confirm</servlet-name>
    <url-pattern>/confirm</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>sendconfirm</servlet-name>
    <servlet-class>com.epam.project.controller.SendConfirm</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sendconfirm</servlet-name>
    <url-pattern>/sendconfirm</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>downloadFile</servlet-name>
    <servlet-class>com.epam.project.controller.DownloadFile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>downloadFile</servlet-name>
    <url-pattern>/downloadFile</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>languageFilter</filter-name>
    <filter-class>com.epam.project.filter.LanguageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>languageFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>loginuserFilter</filter-name>
    <filter-class>com.epam.project.filter.LoginUserFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginuserFilter</filter-name>
    <url-pattern>/login</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>loginuserFilter</filter-name>
    <url-pattern>/registration</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>loginuserFilter</filter-name>
    <url-pattern>/reset</url-pattern>
  </filter-mapping>
