    <filter-name>loginuserFilter</filter-name>
    <url-pattern>/confirm</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>OpenCreateTask</servlet-name>
    <servlet-class>com.epam.project.controller.OpenCreateTask</servlet-class>
