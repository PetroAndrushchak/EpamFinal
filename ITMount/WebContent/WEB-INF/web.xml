    <error-code>500</error-code>
    <location>/WEB-INF/error/404.jsp</location>
  </error-page>
  <filter>
    <filter-name>endSession</filter-name>
    <filter-class>com.epam.project.filter.EndSessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>endSession</filter-name>
    <url-pattern>/GroupServlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>endSession</filter-name>
    <url-pattern>/CourseServlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>endSession</filter-name>
    <url-pattern>/KnowledgeBaseServlet</url-pattern>
  </filter-mapping>
